{{#paper-toolbar}}
  <div class="md-toolbar-tools">
    {{#paper-sidenav-toggle as |toggle|}}
      {{#paper-button target=toggle action="toggleMenu" icon-button=true}}{{paper-icon icon="menu"}}{{/paper-button}}
    {{/paper-sidenav-toggle}}
    <span class="md-breadcrumb-page">Vote</span>
  </div>
{{/paper-toolbar}}
{{#paper-content class="md-padding" }}
  <div class="doc-content">
    <h3>Entries</h3>
    {{#paper-content class="md-whiteframe-z1 list-demo" }}
      {{#paper-list}}
        {{#each model as |item|}}
        {{#if item.isEntry}}
          {{#paper-item class="md-3-line" }}
            <img src= {{item.face}} alt= {{item.who}} class="md-avatar">
            <div class="md-list-item-text">
              <h3>{{item.name}}</h3>
              <p>
                {{item.notes}}
              </p>
            </div>
            {{#paper-button action=(action 'remove' item) primary=true raised=true}}Remove{{/paper-button}}
          {{/paper-item}}
        {{/if}}
        {{/each}}
      {{/paper-list}}
    {{/paper-content}}
  </div>
{{/paper-content}}

{{#paper-content class="md-padding" }}
  <div class="doc-content">
    <h3>Add some entries</h3>
    {{#paper-content class="md-whiteframe-z1 list-demo" }}
      {{#paper-list}}
        {{#each model as |item|}}
        {{#unless item.isEntry}}
          {{#paper-item class="md-3-line" }}
            <img src= {{item.face}} alt= {{item.who}} class="md-avatar">
            <div class="md-list-item-text">
              <h3>{{item.name}}</h3>
              <p>
                {{item.notes}}
              </p>
            </div>
            {{#paper-button action=(action 'add' item) primary=true raised=true}}Add{{/paper-button}}
          {{/paper-item}}
        {{/unless}}
        {{/each}}
      {{/paper-list}}
    {{/paper-content}}
  </div>
{{/paper-content}}
